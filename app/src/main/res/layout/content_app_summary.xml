<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_summary_card"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/rectangle_border_outline"
    android:clickable="true"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp">


    <LinearLayout
        android:id="@+id/status_and_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="App Name"
            android:textColor="@color/primaryText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/app_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxWidth="130dp"
            android:singleLine="true"
            android:text="Completed"
            android:textColor="#9CCC65"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/app_completed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sep,17,2015"
            android:textColor="@color/secondaryText" />

        <TextView
            android:id="@+id/app_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="coming soon" />
    </LinearLayout>


    <View
        android:id="@+id/underscore_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/status_and_description"
        android:alpha="0.5"
        android:background="@color/accentColor" />
</RelativeLayout>